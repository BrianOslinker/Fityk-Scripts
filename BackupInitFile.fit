define VoigtSchenk(area, center, fwhm=2*hwhm, wL) = area*((1-(1.33603*(wL/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2) - 0.47719*(wL/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^2 + 0.11116*(wL/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^3))*exp(-((x-center)/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^2)/(sqrt(2*pi)*(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)+(1.33603*(wL/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2) - 0.47719*(wL/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^2 + 0.11116*(wL/(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^3)*(1/(pi*(fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2))*((fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^2/((x - center)^2 + ((fwhm^5+2.69296*fwhm^4*wL+2.42843*fwhm^3*wL^2+4.47163*fwhm^2*fwhm^3+0.07842*fwhm*wL*4+wL^5)^0.2)^2))

define Si2pPeak(area,center,fwhm=~0.5,wL=0.055,eLS=0.59) = VoigtSchenk(area,center,fwhm,wL) + VoigtSchenk(area/2,center-eLS,fwhm,wL)

define Mo3dPeak(area,center,fwhm=~0.5,wL=~0.2,eLS=~3.17) = VoigtSchenk(area,center,fwhm,wL) + VoigtSchenk(area*2/3,center-eLS,fwhm,wL)

define Mo3d5and6Peaks(area5,area6,center,fwhm5=~0.5,fwhm6=~0.5,wL=~0.2,eLS=~3.17) = VoigtSchenk(area6,center,fwhm6,wL) + VoigtSchenk(area6*2/3,center-eLS,fwhm6,wL) + VoigtSchenk(area5,center-1.16,fwhm5,wL) + VoigtSchenk(area5*2/3,center-eLS-1.16,fwhm5,wL)